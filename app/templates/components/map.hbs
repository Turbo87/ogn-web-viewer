<div
  id="map"
  style="width: 100%; height: {{if (and hasDeviceFilter @task) "70%" "100%"}}"
  data-test-map
  {{did-insert this.setMapTarget}}
  {{will-destroy (fn this.setMapTarget null)}}
>
  <TaskLayer @task={{@task}}/>

  <AircraftShadowLayer/>
  <AircraftLayer/>

  {{#if (not (media "isStandalone"))}}
    <FullscreenButton @map={{this.map}}/>
  {{/if}}

  {{#if (not (media "coarsePointer"))}}
    <ZoomButtons @map={{this.map}}/>
  {{/if}}
</div>